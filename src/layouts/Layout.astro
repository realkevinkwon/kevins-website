---
import '@fontsource-variable/roboto-mono';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex h-screen p-4 md:p-16 lg:p-24 xl:p-40 space-x-16">
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: "Roboto Mono Variable", sans-serif;
		background: #e4e4e4;
	}
	.test-a {
		outline-width: 4px;
		outline-color: rgb(255, 121, 121);
		outline-style: dotted;
	}
	.test-b {
		outline-width: 4px;
		outline-color: rgb(87, 129, 255);
		outline-style: dotted;
	}
</style>
